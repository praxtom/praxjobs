---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import InterviewPreparator from "../components/tools/InterviewPrep.astro";
// Add hybrid rendering
export const prerender = false;
---

<Layout 
    title="AI Interview Preparation | Ace Your Job Interviews"
    description="Prepare for job interviews with our AI-powered interview coach. Practice common questions, get personalized feedback, and build confidence for your next interview."
    image="/images/interview-prep-og-image.jpg"
    type="website"
    canonical="/interview-prep"
    ogTitle="AI Interview Coach | Prepare for Job Interviews | PraxJobs"
    ogDescription="Get ready for your job interviews with personalized AI coaching. Practice answers to common questions, receive feedback, and improve your interview skills."
>
    <main class="relative min-h-screen dark:bg-gray-950 pt-16">
        <div
            aria-hidden="true"
            class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20"
        >
            <div
                class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"
            >
            </div>
            <div
                class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"
            >
            </div>
        </div>
        <Container>
            <div class="relative pt-36 space-y-20">
                <div class="w-full text-center mx-auto">
                    <h1
                        class="text-gray-900 dark:text-white font-bold text-4xl md:text-5xl lg:text-6xl xl:text-7xl"
                    >
                        <span class="text-primary dark:text-white"
                            >Interview Preparation</span
                        >
                    </h1>
                    <p
                        class="mt-8 text-gray-700 dark:text-gray-300 text-lg max-w-3xl mx-auto"
                    >
                        Prepare for your interviews with AI-generated questions
                        tailored to the company and role. Practice your answers
                        and get personalized feedback to improve your interview
                        performance.
                    </p>

                    <!-- Stats Section -->
                    <div
                        class="hidden py-8 mt-16 border-y border-gray-100 dark:border-gray-800"
                    >
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                            <div class="text-center">
                                <h2
                                    class="text-4xl font-bold text-gray-900 dark:text-white"
                                >
                                    95%
                                </h2>
                                <p
                                    class="mt-2 text-gray-600 dark:text-gray-400"
                                >
                                    Interview Success Rate
                                </p>
                            </div>
                            <div class="text-center">
                                <h2
                                    class="text-4xl font-bold text-gray-900 dark:text-white"
                                >
                                    1000+
                                </h2>
                                <p
                                    class="mt-2 text-gray-600 dark:text-gray-400"
                                >
                                    Companies Covered
                                </p>
                            </div>
                            <div class="text-center">
                                <h2
                                    class="text-4xl font-bold text-gray-900 dark:text-white"
                                >
                                    500+
                                </h2>
                                <p
                                    class="mt-2 text-gray-600 dark:text-gray-400"
                                >
                                    Job Roles
                                </p>
                            </div>
                            <div class="text-center">
                                <h2
                                    class="text-4xl font-bold text-gray-900 dark:text-white"
                                >
                                    10k+
                                </h2>
                                <p
                                    class="mt-2 text-gray-600 dark:text-gray-400"
                                >
                                    Users Helped
                                </p>
                            </div>
                        </div>
                    </div>

                    <InterviewPreparator />

                    <section
                        id="benefits"
                        class="relative py-16 w-full overflow-hidden rounded-2xl"
                    >
                        <div
                            class="container relative mx-auto p-4 sm:p-6 lg:p-8"
                        >
                        </div>
                    </section>
                </div>
            </div>
        </Container>
    </main>

    <script>
        import { authService } from "../lib/auth";

        document.addEventListener("DOMContentLoaded", async () => {
            try {
                const user = await authService.getCurrentUser();
                // You can add user-specific functionality here if needed
            } catch (error) {
                console.error("Auth error:", error);
            }
        });
    </script>
</Layout>
