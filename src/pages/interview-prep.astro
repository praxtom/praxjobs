---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import InterviewPreparator from "../components/tools/InterviewPrep.astro";
// Add hybrid rendering
export const prerender = false;
---

<Layout
  title="AI Interview Prep | Prepare for Success"
  description="Get ready for your interviews with our AI-powered prep tool. Tailor your preparation to specific roles and stand out in interviews."
  image="/images/interview-prep-og-image.jpg"
  type="website"
  canonical="/interview-prep"
  ogTitle="AI Interview Prep | Ace Your Interviews | PraxJobs"
  ogDescription="Prepare for interviews with personalized guidance and insights. Our AI tool helps you craft compelling narratives tailored to each interview."
>
  <main class="relative min-h-screen dark:bg-gray-950 pt-16">
    <div
      aria-hidden="true"
      class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20"
    >
      <div
        class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"
      >
      </div>
      <div
        class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"
      >
      </div>
    </div>
    <Container>
      <div class="relative pt-36 space-y-20">
        <div class="w-full text-center mx-auto">
          <h1
            class="text-gray-900 dark:text-white font-bold text-4xl md:text-5xl lg:text-6xl xl:text-7xl"
          >
            <span class="text-primary dark:text-white">Ace Your Interviews</span
            >
          </h1>
          <p
            class="mt-8 text-gray-700 dark:text-gray-300 text-lg max-w-3xl mx-auto"
          >
            Prepare effectively for your interviews with tailored insights and
            strategies that highlight your strengths and experiences.
          </p>

          <!-- Stats -->
          <div
            class="hidden py-8 mt-16 border-y border-gray-100 dark:border-gray-800 sm:flex justify-between"
          >
            <div class="text-left">
              <h6 class="text-lg font-semibold text-gray-700 dark:text-white">
                Personalized Guidance
              </h6>
              <p class="mt-2 text-gray-500">Tailored to your job role</p>
            </div>
            <div class="text-left">
              <h6 class="text-lg font-semibold text-gray-700 dark:text-white">
                Expert Insights
              </h6>
              <p class="mt-2 text-gray-500">Strategies from industry leaders</p>
            </div>
            <div class="text-left">
              <h6 class="text-lg font-semibold text-gray-700 dark:text-white">
                Instant Preparation
              </h6>
              <p class="mt-2 text-gray-500">Get ready in minutes</p>
            </div>
          </div>
        </div>
      </div>
    </Container>

    <div class="relative pt-3 space-y-20">
      <div class="w-full text-center mx-auto">
        <InterviewPreparator />
      </div>
    </div>
  </main>

  <script>
    import { authService } from "../lib/auth";

    document.addEventListener("DOMContentLoaded", async () => {
      try {
        const user = await authService.getCurrentUser();
        // You can add user-specific functionality here if needed
      } catch (error) {
        console.error("Auth error:", error);
      }
    });
  </script>
</Layout>
