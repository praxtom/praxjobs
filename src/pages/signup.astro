---
import Layout from "../layouts/Layout.astro";
import SignupForm from "../components/auth/SignupForm.astro";
---

<Layout 
    title="Sign Up for PraxJobs | Start Your AI-Powered Job Search Journey"
    description="Create your PraxJobs account today and access powerful AI tools for resume building, job analysis, cover letter generation, and interview preparation."
    image="/images/signup-og-image.jpg"
    type="website"
    canonical="/signup"
    ogTitle="Join PraxJobs | Revolutionize Your Job Search with AI Tools"
    ogDescription="Sign up for PraxJobs and transform your job search with AI-powered tools that help you land your dream job faster and more efficiently."
>
    <main class="relative min-h-screen bg-gray-50 dark:bg-gray-950 pt-16">
        <section
            class="min-h-screen flex items-center justify-center px-4 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 transition-all duration-500"
        >
            <SignupForm />
        </section>
    </main>
</Layout>
